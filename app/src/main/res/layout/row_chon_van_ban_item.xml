<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/custom_editor_text"
        android:layout_marginTop="15dp"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:id="@+id/imagine_view"
            />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/imagine_view"
            android:layout_toStartOf="@+id/select_btn"

            android:layout_toRightOf="@id/imagine_view"
            android:fontFamily="sans-serif"
            android:text="TÊN VĂN BẢN"

            android:textColor="#000"
            android:textSize="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imagine_view"
            android:layout_below="@id/user_name"
            android:text="Người đăng / Ngày đăng"
            android:layout_marginLeft="20dp"
            android:id="@+id/date_tv"
            android:fontFamily="sans-serif"
            />
        <Button
            android:layout_width="100dp"
            android:text="Chọn tệp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/select_btn"

            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>